# Homebrew bundle for dotfiles
# Install with: brew bundle --file=./Brewfile

# Brews (CLI tools)
brew "fzf"
brew "zoxide"
brew "eza"
brew "fd"
brew "bat"          # Modern cat replacement
brew "ripgrep"      # Modern grep replacement
brew "gnupg"        # GPG (GNU Privacy Guard)
brew "uutils-coreutils" # Rust coreutils for cross-platform compatibility
brew "tealdeer"     # Fast tldr client
brew "neovim"
brew "nano"         # GNU nano editor
brew "starship"
brew "z"
brew "kubectl"      # Kubernetes CLI
brew "kubectl-cnpg" # CloudNativePG plugin for kubectl
brew "k9s"          # Kubernetes TUI
brew "kind"         # Kubernetes in Docker
brew "pinentry-mac" # macOS pinentry for GPG
brew "navi"         # Interactive cheatsheets (fzf-powered)

